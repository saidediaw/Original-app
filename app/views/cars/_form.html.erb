<div class='new'>
<%= form_with(model: @car, url: car_path, local: true) do |form| %>
  <% if car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "car name" %>
    <%= form.text_field :name, class:"credentials" %>
  </div>
  </br>

  <div class="field">
    <%= form.label :age, "manufactured year" %>
    <%= form.date_field :age %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.select :color, ['White', 'Black', 'Brown&White', 'Other'] %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.select :price, ['four millions', 'six millions', 'twenty millions'] %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.select :size, ['sports', 'Familial'] %>
  </div>
  </br>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight, class:"credentials" %> Kg
  </div>
  </br>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, placeholder: "Price", class:"credentials" %> $
  </div>
  </br>

  <div class="field">
    <%= form.label :, "power" %>
    <%= form.text_field :power, class:"credentials" %>
  </div>
  </br>

  <div class="field">
    <%= form.label :speed %>
    <%= form.select :speed, %>
  </div>
  </br>

  <div class="field">
    <%= form.label :picture %>
    <%= image_tag(@car.picture.url, style:"width:200px") if @car.picture && @car.picture.url %> </br>
    <%= form.file_field :picture %>
  </div>
  </br>

  <div class="field">
    <%= form.text_area :comment, placeholder: "Add comment", rows: 4 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
